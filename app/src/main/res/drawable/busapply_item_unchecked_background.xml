<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#23040000"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>

    <item
        android:left="3dp"
        android:bottom="3dp">

        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#7b2bfc"
                android:startColor="#5196e9" />

            <corners android:radius="28dp"/>

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"/>
        </shape>
    </item>

    <item
        android:left="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <corners android:radius="28dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>

    </item>
</layer-list>