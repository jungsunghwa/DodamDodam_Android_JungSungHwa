<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#23040000" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:angle="0"
                android:endColor="#7b2bfc"
                android:startColor="#5196e9" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

</layer-list>