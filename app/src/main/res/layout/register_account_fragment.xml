<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_up">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="26dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round"
                android:text="@string/app_name"
                android:textColor="@color/cardview_light_background"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round"
                android:text="Sign up"
                android:textColor="@color/cardview_light_background"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/register_id_edittext"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:layout_marginBottom="30dp"
            app:met_maxCharacters="10"
            app:met_floatingLabel="highlight"
            app:layout_constraintBottom_toTopOf="@+id/register_pw_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/register_pw_edittext"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:inputType="textPassword"
            app:met_maxCharacters="10"
            app:met_floatingLabel="highlight"
            app:layout_constraintBottom_toTopOf="@+id/register_pwcheck_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/register_pwcheck_edittext"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            app:met_maxCharacters="10"
            app:met_floatingLabel="highlight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>