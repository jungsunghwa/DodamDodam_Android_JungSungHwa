<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/student_class_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="학년 반"
            ellipsize = "marquee"
            marqueeRepeatLimit = "marquee_forever"
            singleLine="true"
            android:visibility="gone"
            android:inputType="text"
            android:background="@drawable/border"
            android:layout_weight="2" />

        <TextView
            android:inputType="text"
            android:id="@+id/student_number_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="번호"
            android:padding="10dp"
            android:background="@drawable/border"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/student_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이름"
            android:padding="10dp"
            android:background="@drawable/border"
            android:layout_weight="4" />

        <TextView
            android:id="@+id/location_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="위치"
            android:padding="10dp"
            android:background="@drawable/border"
            android:layout_weight="2" />

        <TextView
            android:inputType="text"
            android:id="@+id/check_location_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="확인"
            android:padding="10dp"
            android:background="@drawable/border"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/check_location_cb"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>